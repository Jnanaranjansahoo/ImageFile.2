@model List<string>





<div class=" container">

    <div class="row"> 
        @foreach (var imagePath in Model)
        {
            <div class="col-md-3">
                <div class="alert alert-success" role="alert">
                    <img src="~/uploads/@imagePath" alt="Image" height="100px" width="205px" />

                    <!--   
                        <a href="/Gallery/DownloadFile/?filePath=@imagePath"><i class="fa fa-download" aria-hidden="true"></i></a> |
                    -->
                    <a href="/Gallery/DeleteFile/?filePath=@imagePath">@* <i class="fa fa-trash" aria-hidden="true"> </i>*@ delet</a>
                </div>

            </div>
        }
    </div>





    @using (Html.BeginForm("Index", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class=" row">
            <div class="form-group col-md-6">
                <input type="file" class="form-control" name="myfile" />
            </div>
            <div class="form-group col-md-6">
                <input type="submit" value="Upload" name="filesubmit" />
            </div>
        </div>
    }
</div>